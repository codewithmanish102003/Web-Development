<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Starway Collections</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="font-['helvetica_now_display'] overflow-auto">
    <nav class="w-full flex justify-between px-5 py-3">
        <h3 class="text-xl">ðŸ’«wayCollections</h3>
        <% var loggedin = typeof loggedin !== "undefined" ? loggedin : true %>
        <% if (loggedin) { %>
            <div class="flex gap-5">
                <a href="/owner-profile">My Account</a>
                <a class="text-red-600" href="/user/logout">Logout</a>
            </div>
        <% } %>
    </nav>
    <div class="w-full flex items-start px-10 py-10 ">
        <div class="w-[20%] flex flex-col items-start shadow p-8 h-[80vh]">
            <div class="flex flex-col">
                <a class="block w-fit mb-2" href="/owners/all-products">All Products</a>
                <a class="block w-fit mb-2" href="/owners/createproducts">Create new product</a>
            </div>
        </div>
        <div class="w-[80%] flex flex-col gap-5 p-8 shadow ml-4 h-[80vh]">
            <a class="text-red-500" href="">Delete all</a>
            <div class="flex flex-wrap items-start gap-5">
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <div class="w-60">
                            <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
                                <% if (product.image) { %>
                                    <img class="h-[12rem]" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                                <% } else { %>
                                    <img class="h-[12rem]" src="/path/to/default/image.jpg" alt="Default Image">
                                <% } %>
                            </div>
                            <div class="flex justify-between bg-[<%= product.panelcolor %>] items-center px-4 py-4 text-[<%= product.textcolor %>]">
                                <div>
                                    <h3>
                                        <%= product.name %>
                                    </h3>
                                    <h4>â‚¹ <%= product.price %>
                                    </h4>
                                    <h4>Discount : â‚¹ <%= product.discount %></h4>
                                </div>
                                <div>
                                    <a class="w-6 h-6 flex items-center justify-center rounded-full " href="">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="ionicon" viewBox="0 0 512 512"><path d="M112 112l20 320c.95 18.49 14.4 32 32 32h184c17.67 0 30.87-13.51 32-32l20-320" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="32"/><path stroke="currentColor" stroke-linecap="round" stroke-miterlimit="10" stroke-width="32" d="M80 112h352"/><path d="M192 112V72h0a23.93 23.93 0 0124-24h80a23.93 23.93 0 0124 24h0v40M256 176v224M184 176l8 224M328 176l-8 224" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="32"/></svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No products created yet.</p>
                <% } %>
            </div>
        </div>
    </div>
    <%- include('./partials/footer') %>
</body>

</html>