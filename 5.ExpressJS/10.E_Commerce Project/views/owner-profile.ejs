<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Owner Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="font-['helvetica_now_display'] overflow-auto">
    <nav class="w-full flex justify-between px-5 py-3">
        <h3 class="text-xl">ðŸ’«wayCollections</h3>
        <div class="flex gap-5">
            <a class="block w-fit mb-2" href="/owners/all-products">All Products</a>
            <a href="/owner-profile">My Account</a>
            <a class="text-red-600" href="/user/logout">Logout</a>
        </div>
    </nav>

    <!-- Owner Profile Section -->
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold text-primary mb-6">Owner Profile</h1>

        <!-- Owner Details -->
        <div class="bg-white p-6 rounded-lg shadow-lg mb-6">
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">Owner Information</h2>
            <div class="flex gap-4 items-center">
                <div>
                    <% if (owner.picture) { %>
                        <img src="<%= owner.picture %>" alt="Owner Picture" class="w-32 h-32 rounded-full object-cover">
                    <% } else { %>
                        <div class="w-32 h-32 bg-gray-200 rounded-full flex items-center justify-center text-gray-500">
                            No Image
                        </div>
                    <% } %>
                </div>
                <div>
                    <p class="text-gray-600"><span class="font-semibold">Full Name:</span> <%= owner.fullname %></p>
                    <p class="text-gray-600"><span class="font-semibold">Email:</span> <%= owner.email %></p>
                    <p class="text-gray-600"><span class="font-semibold">GST No:</span> <%= owner.gstno %></p>
                </div>
                
            </div>
        </div>

        <!-- Products Created by Owner -->
        <div class="bg-white p-6 rounded-lg shadow-lg mb-6">
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">Products Created</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <div class="bg-gray-50 p-4 rounded-lg shadow-sm">
                            <h3 class="text-xl font-semibold text-gray-800"><%= product.name %></h3>
                            <p class="text-gray-600">Price: $<%= product.price %></p>
                            <p class="text-gray-600">Discount: $<%= product.discount %></p>
                            <p class="text-gray-600">Created At: <%= product.createdAt.toLocaleDateString() %></p>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No products created yet.</p>
                <% } %>
            </div>
        </div>

        <!-- Users Who Added Products to Cart -->
        <div class="bg-white p-6 rounded-lg shadow-lg">
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">Users with Products in Cart</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <% usersWithProductsInCart.forEach(user => { %>
                    <div class="bg-gray-50 p-4 rounded-lg shadow-sm">
                        <h3 class="text-xl font-semibold text-gray-800"><%= user.fullname %></h3>
                        <p class="text-gray-600">Email: <%= user.email %></p>
                        <p class="text-gray-600">Products in Cart:</p>
                        <ul class="list-disc list-inside">
                            <% user.cart.forEach(product => { %>
                                <li class="text-gray-600"><%= product.name %></li>
                            <% }); %>
                        </ul>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</body>

</html>